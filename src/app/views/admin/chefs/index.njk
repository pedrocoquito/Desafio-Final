{% extends "admin/layout.njk" %}

{% block head %}
  <title>Edição de Chefs</title>
{% endblock %}

{% block content %}

<div class="main">
      <div class="admin-form">
          <div class="form-header">
            <div>
                <h1>Chef {{chefs.name}}</h1>
            </div>
          </div>
      </div>
  <div class="main-recipes">
    <div class="recipes">
          <div class="chef-card">
            <img src="{{chefs.image if chefs.image else 'http://placehold.it/500x500?text=SEM-IMAGEM'}}" style="width: 200px; height:200px;" alt="{{chef.name}}">
            <div class="chef">
              <h2>{{chefs.name}}</h2>
              <h3>{{chefs.recipes}} receita(s)</h3>
            </div>
          </div>
    </div>
    <input type="hidden" name="id" value="{{chef.id}}">
  </div>
  <section class="main-recipes">
    <h2>Receitas</h2>
    <div class="recipes">
    {% for item in recipes %}
       <div class="recipe-card">
       <a href="/recipes/{{item.id}}">
        <img
          class="image"
          src="{{item.img if item.img else 'http://placehold.it/500x500?text=SEM-IMAGEM'}}"
          alt="{{item.title}}"
        />
        </a>
        <p class="title">{{item.title}}</p>
        <p class="author">{{item.author}}</p>
      </div>
    {% endfor %}
  </section>
</div>

{% endblock %}