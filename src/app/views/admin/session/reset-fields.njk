<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email" 
            name="email" 
            placeholder="Informe seu email"
            value=""{{user.email}}
            onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>

<div class="item">
    <div>Nova senha</div>
    <div class="input">
        <input 
            type="password" 
            name="password" 
            placeholder="Digite sua nova senha">
    </div>
</div>

<div class="item">
    <div>Confirme sua nova senha</div>
    <div class="input">
        <input 
            type="password" 
            name="passwordRepeat" 
            placeholder="Confirme sua nova senha">
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">