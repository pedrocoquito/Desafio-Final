{% extends "admin/layout.njk" %}

{% block content %}
<div class="fields-form">
    <h2>Esqueceu a Senha?</h2>
    <form action="/admin/forgot-password" method="POST">
        <div class="item">
            <div class="login-form">
            <div class="field">
                <p>Email</p>
                <input 
                type="text" 
                name="email"
                value="{{user.email}}"
                placeholder="Digite seu email para recuperação"
                >
            </div>
            <div class="login-footer">
                <button class="login-button" type="submit">Recuperar</button>
            </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}