{% extends "home/layout.njk" %}

{% block head %}
  <title>Busca</title>
{% endblock %}

{% block content %}

  <div class="app">
    <section>
      <h2>Resultado</h2>
      <div class="cards">
      {% for recipe in recipes %}
        <div class="card">
          <img src="{{recipe.image if recipe.image else 'http://placehold.it/500x500?text=SEM-IMAGEM'}}" alt="">
          <h6>{{recipe.title}}</h6>
          <p>{{recipe.author}}</p>
        </div>
      {% endfor %}
    </section>
  </div>

{% endblock %}
